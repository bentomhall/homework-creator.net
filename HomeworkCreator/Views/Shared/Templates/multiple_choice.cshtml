@using HomeworkCreator.Models;
@model QuestionData

<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>@Model.Title</title>
    <link href="main.css" rel="stylesheet">
    <script src="validation.js"></script>
</head>
<body>
    <div class="container">
        <h1 id="problem-id">@Model.Title</h1>
        <p id="question-text">@Model.Text</p>
        @{
            int index = 0;
            foreach (string option in @Model.Prompts)
            {
                <input type="radio" name="answer-entry" value="@index"/>@option <br/>
            }
        }

        <button type="button" id="submit" onclick="validateAnswer(true)" class="unchecked">Check</button>
        <img class="validation-icon" src="incorrect.png" height="20" width="20">
        <p id="hint">@Model.Hint</p>
        <button onclick="nextPage()">Next&gt;</button>
        <button onclick="homePage()">Home</button>
        <p id="answer">@Model.Answer</p>
        <p id="question-type">exact</p>
        <p id="question-id">@Model.Order</p>
    </div>
</body>
</html>